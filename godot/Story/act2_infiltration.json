	},
	{
		"animation": "enter",
		"character": "marek",
		"mood": "neutral",
		"side": "left",
		"text": "Добрый вечер...",
		"type": "dialogue"
	},
	{
		"text": "Некоторые оборачиваются и смотрят на вас.",
		"type": "dialogue"
	},
	{
		"animation": "enter",
		"character": "dima",
		"mood": "happy",
		"side": "right",
		"text": "О! Марек! Привет! Пришёл всё-таки!",
